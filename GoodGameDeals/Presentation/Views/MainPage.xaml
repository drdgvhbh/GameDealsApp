<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:isAcrylicBrushPresent="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsTypePresent(Windows.UI.Xaml.Media.AcrylicBrush)"
    xmlns:isAcrylicBrushNotPresent="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsTypeNotPresent(Windows.UI.Xaml.Media.AcrylicBrush)"
    xmlns:controls="using:GoodGameDeals.Controls"
    x:Class="GoodGameDeals.Presentation.Views.MainPage"
    mc:Ignorable="d">

    <Page.DataContext>
        <Binding Path="ViewModelLocatorInstance.MainPageViewModelInstance" Source="{StaticResource Root}" />
    </Page.DataContext>
    <Page.Resources>
    </Page.Resources>
    <!--<<< isAcrylicBrushPresent:Background="{ThemeResource SystemControlAltHighAcrylicWindowBrush}" IsAcrylicBrushNotPresent:Background="#373737" -->
    <Grid x:Name="RootGrid" isAcrylicBrushPresent:Background="{ThemeResource SystemControlAltHighAcrylicWindowBrush}"
          isAcrylicBrushNotPresent:Background="#373737">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <!--<<< Will resize to the size of contents -->
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource HeaderTextBlockStyle}" Text="Latest Deals"
                   isAcrylicBrushPresent:Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                   isAcrylicBrushNotPresent:Foreground="White"
                   FontFamily="Segoe UI"
                   FontWeight="Light" Margin="24,0,0,0" Grid.ColumnSpan="2" Width="279" HorizontalAlignment="Left" />
        <Rectangle Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Height="1" VerticalAlignment="Bottom"
                   Fill="{StaticResource AccentColor}" Margin="24,0,24,0" />
        <ScrollViewer Margin="24,24,0,24" Grid.Row="1" Width="634" HorizontalAlignment="Left" Grid.ColumnSpan="2">
            <ItemsControl HorizontalAlignment="Left" VerticalAlignment="Top"
                          ItemsSource="{Binding GamesCollectionView}">
                <ItemsControl.Resources>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Margin" Value="0, 0, 0, 17" />
                    </Style>
                </ItemsControl.Resources>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <controls:GameDealControl GameTitle="{Binding GameTitle}" Image="{Binding GameImage}"
                                                  GameSubtitle="{Binding GameSubtitle}" DealsList="{Binding DealsList}"
                                                  MaxHeight="100" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>